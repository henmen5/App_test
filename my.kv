WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        Label:
            text: "Platzhalter: "

        GridLayout:
            cols:2

            Button:
                text: "neue Erinnerung"
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "right"

            Button:
                text: "Kalender"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"

<ThirdWindow>:
    name: "third"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"